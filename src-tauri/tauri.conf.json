{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "xiang-app",
  "version": "0.1.0",
  "identifier": "com.xiang.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "象棋",
        "label": "main",
        "titleBarStyle": "Transparent",
        "width": 516,
        "height": 434,
        "resizable": false,
        "fullscreen": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}